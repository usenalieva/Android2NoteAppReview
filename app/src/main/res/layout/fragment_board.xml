        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        app:dotsColor="@color/orange"
        app:dotsCornerRadius="8dp"
        app:dotsSize="16dp"
        app:dotsSpacing="4dp"
        app:dotsStrokeColor="@color/orange"
        app:dotsStrokeWidth="2dp" />


